<div class="card">
  <div class="card-header">
    <h5> {{t "Forumbericht verwijderen"}} </h5>
  </div>
  <div class="card-body">
    <p class="card-text">
      {{t "Weet je zeker dat je dit forumbericht van "}} <b> {{model.author.fullName}} </b> {{t " wilt verwijderen?"}}
    </p>
    <p class="card-text">
      <b> {{t "Inhoud: "}} </b> <br>
      {{model.message}}
    </p>
    {{#if errorMessage}}
      <div class="text-danger">{{errorMessage}}</div>
    {{/if}}
  </div>
  <div class="card-footer">
    <button {{action "destroy"}} class="btn btn-danger">{{t "Verwijderen"}}</button>
    {{#link-to "forum.categories.category.threads.thread" model.thread class="btn btn-default" tagName="button"}}{{t "Annuleren"}}{{/link-to}}
  </div>
</div>
