  dateValue=dateValue
  class='col-6'
  inputClass=inputClass
  placeholder=placeholder
  required=required
  disabled=disabled}}
{{input/time-input
  inputId=(concat inputId '-time')
  dateValue=dateValue
  class='col-6'
  inputClass=inputClass
  placeholder=placeholder
  required=required
  disabled=disabled}}
