<div class="form filter-bar">
  <div class="form-group mb-0">
    <div class="input-group">
      <div class="input-group-prepend">
        <i class="fa fa-search input-group-text" aria-hidden="true"></i>
      </div>
      {{input value=filter class="filter-bar-filter form-control" placeholder="Zoeken" enter=enter}}

      <div class="input-group-append">

        {{#bs-dropdown as |dd|}}
          {{#dd.button type="default"}}
            {{#if sortedAscending}}
              {{fa-icon 'sort-amount-asc'}}
            {{else}}
              {{fa-icon 'sort-amount-desc'}}
            {{/if}}
          {{/dd.button}}

          {{#dd.menu as |ddm|}}
            <div class="ml-2 text-muted text-bold"> {{t "Sorteren"}} </div>

            {{#ddm.item}}
              {{model-form/radio-group
                model=this
                property='sortedAttribute'
                options=sortableAttributes
                inputLayout='vertical'
                label=null
                inputIdentifier="filter"
                required=false
                class="sort-radio-group"}}
            {{/ddm.item}}

            {{menu.divider}}

            {{#ddm.item}}
              <div class="form-check">
                <label for="sort-order" class="form-check-label">
                  {{input type="checkbox" id="sort-order" checked=sortedAscending class="filter-bar-sorted-ascending form-check-input"}}
                  {{t "Oplopend"}}
                  <div class="custom-checkmark"></div>
                </label>
              </div>
            {{/ddm.item}}

            {{yield}}
          {{/dd.menu}}
        {{/bs-dropdown}}
      </div>
    </div>
  </div>
</div>
