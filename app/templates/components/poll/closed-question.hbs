<div class="form-group">
  {{input type="text" class="form-control" name="question" placeholder="Vraag" value=question.question disabled=question.form.hasResponses}}
</div>

<div class="form-group row">
  <div class="col-md-5 col-sm-12">
    <div class="form-inline">
      <div class="form-group">
        <label class="sr-only">{{t 'Vraagtype'}}</label>
        {{input/select-input
          class='form-control'
          required=required
          options=questionTypeOptions
          placeholder=(t 'Vraagtype')
          value=question.fieldType
          disabled=question.form.hasResponses
        }}
      </div>
    </div>
  </div>
</div>

{{#each question.sortedOptions as |option|}}
  {{#unless option.isDeleted}}
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <label class="form-check-label">
            <input type={{question.fieldType}} disabled="disabled">
            {{#if (eq fieldType "checkbox")}}
              <div class="custom-checkmark input-checkmark"></div>
            {{else}}
              <div class="custom-radiobutton input-checkmark"></div>
            {{/if}}
          </label>
        </span>
        {{input type="text" class="form-control" name="option" placeholder="Optie" value=option.option disabled=question.form.hasResponses}}
        {{#unless question.form.hasResponses }}
          <span class="input-group-btn">
            <button type="button" class="btn btn-default" {{action "moveOptionUp" option}}><i class="fa fa-arrow-up"></i></button>
            <button type="button" class="btn btn-default" {{action "moveOptionDown" option}}><i class="fa fa-arrow-down"></i></button>
            <button type="button" class="btn btn-danger" {{action "deleteOption" option}}><i class="fa fa-trash"></i></button>
          </span>
        {{/unless}}
      </div>
    </div>
  {{/unless}}
{{/each}}

{{#unless question.form.hasResponses }}
  <button type="button" class="btn btn-secondary" {{action "addOption"}}>{{t "Optie toevoegen"}}</button>
{{/unless}}
