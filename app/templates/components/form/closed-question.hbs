<b> {{t 'Gesloten vraag'}} </b>
{{#unless question.form.hasResponses }}
  <div class="float-md-right">
    <a type="button" {{action "deleteQuestion"}}> <i class="fa fa-times" aria-hidden="true"></i> </a>
  </div>
{{/unless}}

<div class="form-group">
  {{input type="text" class="form-control" name="question" placeholder="Vraag" value=question.question disabled=question.form.hasResponses}}
</div>

<div class="form-group row">
  <div class="col-md-5 col-sm-12">
    <div class="form-inline">
      <div class="form-group">
        <label class="sr-only">{{t 'Vraagtype'}}</label>
        {{input/select-input
          class='form-control'
          required=required
          options=questionTypeOptions
          placeholder=(t 'Vraagtype')
          value=question.fieldType
          disabled=question.form.hasResponses
        }}
      </div>
      <div class="form-group ml-2">
        <label class="form-check-label pl-3">
          {{input class="form-check-input" type="checkbox" name="required" checked=question.required disabled=question.form.hasResponses }} {{t "Verplicht"}}
          <div class="custom-checkmark"></div>
        </label>
      </div>
    </div>
  </div>
  {{#unless question.form.hasResponses }}
    <div class="col-md-7 col-sm-12">
      <div class="float-md-right">
        <button type="button" class="btn btn-default" {{action "moveQuestionUp"}}><i class="fa fa-arrow-up"></i> {{t "Omhoog"}}</button>
        <button type="button" class="btn btn-default" {{action "moveQuestionDown"}}><i class="fa fa-arrow-down"></i> {{t "Omlaag"}}</button>
      </div>
    </div>
  {{/unless}}
</div>

{{#each question.sortedOptions as |option|}}
  {{#unless option.isDeleted}}
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <label class="form-check-label" for="check-label">
            <input type={{question.fieldType}} disabled="disabled">
            {{#if (eq question.fieldType "checkbox")}}
              <div class="custom-checkmark input-checkmark" ></div>
            {{else}}
              <div class="custom-radiobutton input-checkmark"></div>
            {{/if}}
          </label>
        </span>
        {{input type="text" class="form-control" name="option" placeholder="Optie" value=option.option disabled=question.form.hasResponses}}
        {{#unless question.form.hasResponses }}
          <span class="input-group-btn">
            <button type="button" class="btn btn-default" {{action "moveOptionUp" option}}><i class="fa fa-arrow-up"></i></button>
            <button type="button" class="btn btn-default" {{action "moveOptionDown" option}}><i class="fa fa-arrow-down"></i></button>
            <button type="button" class="btn btn-default" {{action "deleteOption" option}}><i class="fa fa-trash"></i></button>
          </span>
        {{/unless}}
      </div>
    </div>
  {{/unless}}
{{/each}}

{{#unless question.form.hasResponses }}
  <button type="button" class="btn btn-default mb-3" {{action "addOption"}}>{{t "Optie toevoegen"}}</button>
{{/unless}}
