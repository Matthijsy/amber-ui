<thead>
  <tr>
    {{#if showCheckbox}}
      <th class="table-collumn-narrow"></th>
    {{/if}}
    <th> {{t 'Naam'}} </th>
    {{#each form.sortedQuestions as |question|}}
      <th> {{question.question}} </th>
    {{/each}}
    {{#if showAllergyInfo}}
      <th>{{t 'dieetwensen'}}</th>
      <th>{{t 'vegetariÃ«r'}}</th>
    {{/if}}
  </tr>
</thead>

<tbody>
  {{#each responses as |response|}}
    {{#if response.completed}}
      {{form/responses-table-row form response showAllergyInfo=showAllergyInfo showCheckbox=showCheckbox}}
    {{/if}}
