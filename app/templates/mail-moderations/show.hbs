{{#ember-wormhole to="navbar-wormhole"}}
  {{page-actions-buttons pageActions=pageActions}}
{{/ember-wormhole}}

<div class="row">
  <div class="col">
    <div class="card">
      <div class="row">
        <div class="col-md">
          <div class="card-header">
            <h5>{{model.subject}}</h5>
          </div>
          <div class="card-body table-responsive">
            <p class="card-text">
              <table class="table table-sm">
                <tr>
                  <td>{{t "Datum"}}</td>
                  <td>{{moment-format model.receivedAt 'ddd D MMM YYYY HH:mm'}}</td>
                </tr>
                <tr>
                  <td>{{t "Afzender"}}</td>
                  <td>{{model.sender}}</td>
                </tr>
                <tr>
                  <td>{{t "Aan"}}</td>
                  <td>{{model.mailAlias.email}}</td>
                </tr>
                <tr>
                  <td>{{t "Body"}}</td>
                  <td><pre>{{model.plainBody}}</pre></td>
                </tr>
                <tr>
                  <td>{{t "Bijlages"}}</td>
                  <td>
                    <ul>
                      {{#each model.attachments as |attachment|}}
                        <li><pre>{{attachment.name}} ({{attachment.size}} {{t "bytes"}})</pre></li>
                      {{/each}}
                    </ul>
                  </td>
                </tr>
              </table>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
